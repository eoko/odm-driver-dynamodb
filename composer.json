{
    "name": "eoko/odm/driver/dynamo-db",
    "description":"Simple ODM that work fine with DynamoDB",
    "keywords":["DynamoDB", "ODM"],
    "type":"library",
    "license":"MIT",

    "minimum-stability": "dev",
    "prefer-stable": true,

    "authors":[
        {
            "name":"Romain DARY",
            "email": "romain.dary@eoko.fr",
            "homepage":"http://eoko.fr"
        }
    ],
    "homepage": "https://github.com/eoko/odm",

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/eoko/odm-entitymanager"
        },{
            "type": "vcs",
            "url": "https://github.com/eoko/odm-metadata-annotation"
        },{
            "type": "vcs",
            "url": "git@github.com:eoko/odm-fixture.git"
        }
    ],

    "autoload": {
        "psr-4": {
            "Eoko\\ODM\\Driver\\DynamoDB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eoko\\ODM\\Driver\\DynamoDB\\Test\\": "test/"
        }
    },

    "require": {
        "aws/aws-sdk-php": "~3.2",
        "aws/aws-sdk-php-zf2": "2.*",
        "zendframework/zend-servicemanager": "^2.5@dev",
        "zendframework/zend-eventmanager": "^2.5@dev",
        "aws/aws-sdk-php": "~3.0@dev",
        "doctrine/common": "~2.6@dev",
        "zendframework/zend-filter": "~2.5@dev",
        "zendframework/zend-cache": "~2.5@dev",
        "mockery/mockery": "^1.0@dev",
        "eoko/odm/document-manager": "dev-master",
        "eoko/odm/metadata/annotation": "dev-master",
        "eoko/odm/fixture": "dev-master"
    },

    "require-dev": {
        "zendframework/zendframework": "^2.5@dev",
        "satooshi/php-coveralls": "0.6.*",
        "fabpot/php-cs-fixer": "1.7.*",
        "phpunit/phpunit": "~4.0"
    }
}
